<div class="row">
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to "TODO", root_path %></h1>
      </li>
       <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <% if user_signed_in? %>
        <li></li>
        <li class="has-dropdown">
          <a href="#"><i class="fa fa-lg"><%= current_user.name.split.map(&:capitalize)*' ' %></i></a>
          <ul class="dropdown list-group">
            <li><%= link_to content_tag(:i, "Sign Out", :class => "fa fa-sign-out fa-lg"), destroy_user_session_path,  method: :delete %></li>
          </ul>
        </li>
        <% else %>
        <li>
          <%= link_to content_tag(:i,"Sign Up", :class=>"fa fa-users fa-lg"), new_user_registration_path %>
        </li>
        <li>
          <%= link_to content_tag(:i,"Sign In", :class=>"fa fa-sign-in fa-lg"), new_user_session_path %>
        </li>
        <% end %>
      </ul>

      <!-- Left Nav Section -->
      <ul class="left">
        <li><%= link_to  content_tag(:i, '',:class => "fa fa-plus fa-lg"), new_todo_path %></li>
      </ul>
    </section>
  </nav>
</div>